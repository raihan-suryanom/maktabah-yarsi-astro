import { Icon } from "astro-icon/components";

import Skeleton from "../Skeleton.astro";
---

<!-- TODO: make proper on all skeleton components --><!-- TODO: give props to choice styles -->
<div
  class="fixed bottom-2.5 left-1/2 mx-auto flex translate-x-[20%] items-center gap-x-3 rounded-md bg-light-100 px-3.5 py-1.5 dark:bg-dark-100 [&>*[aria-disabled=true]]:opacity-50 [&_*[aria-disabled=true]]:cursor-not-allowed"
>
  <div
    class="text-primary-light dark:text-primary-dark/80 dark:hover:text-primary-dark"
  >
