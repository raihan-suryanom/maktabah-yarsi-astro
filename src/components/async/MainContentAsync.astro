---
import contentMock from "~/fixtures/content.json";
import { getContents } from "~/lib/content.server";
import { wait } from "~/lib/utils/helper";

import MainContent from "../MainContent.astro";

type Props = {
  id: string;
  page: string;
  query?: string;
};

const { id, page, query } = Astro.props;

const text = await getContents(id, page).then((content) => content.text);
---

<MainContent query={query} content={text} />
